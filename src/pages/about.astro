---
import Breadcrumbs from '@/components/Breadcrumbs.astro'
import Link from '@/components/Link.astro'
import PageHead from '@/components/PageHead.astro'
import ProjectCard from '@/components/ProjectCard.astro'
import Layout from '@/layouts/Layout.astro'
import { getAllProjects } from '@/lib/data-utils'

const projects = await getAllProjects()
---

<Layout>
  <PageHead slot="head" title="About" />
  <Breadcrumbs items={[{ label: 'About', icon: 'lucide:info' }]} />

  <section>
    <div class="min-w-full">
      <div class="rounded-lg border">
        <div class="flex flex-col space-y-1.5 p-6">
          <h3 class="text-3xl leading-none font-medium">shoe·box</h3>
          <p class="text-muted-foreground text-sm">
            /ˈʃuːˌbɒks/ &bull; <span class="font-medium">noun</span>
          </p>
        </div>
        <ul class="p-6 pt-0">
          <li class="text-muted-foreground mb-2 text-sm flex">
            <p class="text-foreground font-medium pr-2 text-nowrap">
              1 :
            </p>
            <p class="text-pretty">
              a box in which a pair of shoes is delivered or sold
            </p>
          </li>
          <li class="text-muted-foreground text-sm flex">
            <p class="text-foreground font-medium pr-2 text-nowrap">
              2 :
            </p>
            <p class="text-pretty">
              a tiny comfy happy personal space I guess
            </p>
          </li>
        </ul>
      </div>

      <div class="prose mb-8">
        <p>
          Essentially my (Bao's) dump of ideas and thoughts and whatnot.
          Some call it a blog or digital garden, I like the term
          <Link
            href='https://www.youtube.com/shorts/ej_5FYIYT98'
            class='text-foreground'
            underline
            external
          >shoebox</Link> more.
        </p>
        <p>
          Based on the template
          <Link
            href='https://astro-erudite.vercel.app/'
            class='text-foreground'
            underline
            external
          >astro-erudite</Link>.
        </p>
      </div>

      <!-- <h2 class="mb-4 text-2xl font-medium">Example Projects Listing</h2>
      <div class="flex flex-col gap-4">
        {projects.map((project) => <ProjectCard project={project} />)}
      </div> -->
    </div>
  </section>
</Layout>